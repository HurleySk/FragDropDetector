# Reddit API Credentials (REQUIRED)
# Get these from https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_client_id_here
REDDIT_CLIENT_SECRET=your_client_secret_here
REDDIT_USER_AGENT=FragDropDetector/1.0 (by /u/YourUsername)

# Subreddit Configuration
SUBREDDIT=MontagneParfums
CHECK_INTERVAL=300  # Check every 5 minutes during drop window
POST_LIMIT=50  # Number of posts to check each scan

# Pushover Notifications (Recommended for iOS/Android)
# Get from https://pushover.net (requires $5 app purchase)
PUSHOVER_APP_TOKEN=your_app_token_here
PUSHOVER_USER_KEY=your_user_key_here

# Discord Webhook (Free alternative)
# Create webhook in Discord server settings > Integrations
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_HERE

# Email Notifications (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_SENDER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here  # Use app password, not regular password
EMAIL_RECIPIENTS=recipient1@email.com,recipient2@email.com

# Testing
SEND_TEST_NOTIFICATION=false  # Set to true to test notifications on startup

# Reddit User Authentication (Generated by generate_token_headless.py)
# These will be automatically populated when you run the authentication script
REDDIT_REFRESH_TOKEN=your_refresh_token_here
REDDIT_USERNAME=your_reddit_username_here